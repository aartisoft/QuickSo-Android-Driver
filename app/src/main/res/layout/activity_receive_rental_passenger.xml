<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/icon_8_muted_black"
    tools:context="com.apporio.demotaxiappdriver.ReceiveRentalPassengerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center|top">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:tint="@color/icons_8_muted_green_1"
            android:src="@drawable/ic_demo_car"
            android:id="@+id/car_type_image"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="top|left"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__rentals"
                    android:textColor="@color/pure_white"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:id="@+id/cateory_etyp_txt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-----------"
                    android:id="@+id/car_type_name_txt"
                    android:textColor="@color/pure_white"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__package"
                    android:textStyle="bold"
                    android:textColor="@color/icons_8_muted_green_1"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:id="@+id/package_txt"
                    android:textColor="@color/pure_white"/>
            </LinearLayout>



        </LinearLayout>




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/pure_white"
        android:layout_margin="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__time"
                android:textColor="@color/icons_8_muted_green_1"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/_time_of_booking_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------"
                android:textColor="@color/pure_white"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__package_price"
                android:textColor="@color/icons_8_muted_green_1"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eta_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----"
                android:textColor="@color/pure_white"
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp">


        <customviews.progresswheel.ProgressWheel
            android:id="@+id/activity_countdown_timer_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="Thin"
            ProgressWheel:barColor="@color/icons_8_muted_green_1"
            ProgressWheel:barWidth="6dp"
            ProgressWheel:rimColor="@color/icons_8_muted_grey"
            ProgressWheel:rimWidth="1dp"
            ProgressWheel:textColor="@color/icons_8_muted_green_1"
            ProgressWheel:textSize="24dp" />




        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/map_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_marker"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__pick_up_point"
            android:textColor="@color/icons_8_muted_green_1"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:id="@+id/pickup_address_txt"
            android:text="-----------------------------------"
            android:textColor="@color/pure_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__note_this_request_will_be_automatically_rejected_in_30_seconds"
            android:layout_marginTop="10dp"
            android:textColor="@color/icons_8_muted_red"
            android:textSize="12dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/cash_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_layout_payment_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/WEEKLY_STATEMENT_ACTIVITY__payment_mode"
                    android:textColor="@color/pure_white" />

                <TextView
                    android:id="@+id/main_layout_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/WEEKLY_STATEMENT_ACTIVITY__cash"
                    android:textColor="@color/pure_white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_layout"
                android:visibility="gone"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_with_card_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/WEEKLY_STATEMENT_ACTIVITY__payment_mode"
                    android:textColor="@color/pure_white" />

                <TextView
                    android:id="@+id/pay_with_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/WEEKLY_STATEMENT_ACTIVITY__card"
                    android:textColor="@color/pure_white" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center|bottom"
        android:padding="5dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/icons_8_muted_red"
                android:gravity="center"
                android:id="@+id/reject_btn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__ignore"
                    android:textColor="@color/pure_white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/icons_8_muted_green_1"
                android:gravity="center"
                android:id="@+id/accept_btn">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__accept"
                    android:textColor="@color/pure_white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>



</LinearLayout>
